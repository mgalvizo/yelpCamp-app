<% layout('layouts/boilerplate') %>
<div class="row justify-content-center">
    <h1 class="text-center">Sign up</h1>
    <div class="col-md-8 col-lg-6">
        <form class="needs-validation" action="/users" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input
                    class="form-control"
                    type="text"
                    name="user[username]"
                    id="username"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a username</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input
                    class="form-control"
                    type="email"
                    name="user[email]"
                    id="email"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add an email</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input
                    class="form-control"
                    type="password"
                    name="user[password]"
                    id="password"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a password</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Sign up</button>
            </div>
        </form>
    </div>
</div>
