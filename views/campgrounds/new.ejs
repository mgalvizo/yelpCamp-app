<% layout('layouts/boilerplate') %>
<div class="row justify-content-center">
    <h1 class="text-center">Add New Campground</h1>
    <div class="col-md-8 col-lg-6">
        <form
            class="needs-validation"
            action="/campgrounds"
            method="POST"
            enctype="multipart/form-data"
            novalidate
        >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <!-- Group everything into a campground object -->
                <input
                    class="form-control"
                    type="text"
                    name="campground[title]"
                    id="title"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a title</div>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Images</label>
                <input
                    class="file-input-index form-control"
                    type="file"
                    id="images"
                    name="campground[images]"
                    required
                    multiple
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add an image</div>
            </div>
            <div class="images-container-index mb-3 row"></div>
            <div class="mb-3">
                <label class="form-label" for="image">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input
                        class="form-control"
                        type="number"
                        name="campground[price]"
                        id="price"
                        placeholder="0.00"
                        aria-label="Amount (to the nearest dollar)"
                        required
                    />
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please add a price</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea
                    class="form-control"
                    name="campground[description]"
                    id="description"
                    cols="30"
                    rows="5"
                    required
                ></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a description</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[location]"
                    id="location"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a location</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>
